# Environment Configuration for The Collective
# Copy this file to .env and customize for your deployment

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Phoenix Configuration  
SECRET_KEY_BASE=ReplaceWithSecretGeneratedByMixPhxGenSecret
PHX_HOST=localhost
PORT=4000
PHX_SERVER=true

# Environment
MIX_ENV=prod

# Optional: DNS Cluster for multi-node deployment
# DNS_CLUSTER_QUERY=the-collective.local

# Optional: SSL Configuration
# SSL_KEY_PATH=/path/to/key.pem
# SSL_CERT_PATH=/path/to/cert.pem
